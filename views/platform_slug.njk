{% extends "layout.njk" %} {% block content %}
  <h1 class="titreGame">Game platform</h1>
  <div class="container">
    <div class="row row-cols-3">
      {% for game in gamesForPlatform %}
      <div class="col-12 col-md-6 col-xl-3">
        <div class="card" style="width: 18rem">
          <img src="{{game.platform.platform_logo_url}}" alt="{{game.name}}" />
          <div class="card-body">
            <h5 class="card-title">{{game.name}}</h5>
            <p class="card-text">{{game.summary}}</p>
            <p class="card-text">{{game.price}} $</p>
            <a href="/games/{{platform.slug}}" class="btn btn-primary">Achat</a>
          </div>
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
{% endblock %}
