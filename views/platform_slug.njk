{% extends "layout.njk" %} {% block content %}
<div class="container">
  <br />
  <h1 class="text-center" style="text-transform: uppercase">{{ gameName }}</h1>
  <br />
  <div class="row row-cols-1 row-cols-lg-4 row-cols-md-3 row-cols-sm-2 g-4">
    {% for platform in gamesForPlatform %}
    <div class="col">
      <div class="card h-100">
        <img src="{{ platform.cover.url }}" class="card-img-top" alt="{{ platform.name }}"/>
        <div class="card-body">
          <h5 class="card-title">{{ platform.name }}</h5>
          <p class="card-text d-md-flex justify-content-md-start">
            {{ platform.price / 100 }} $
          </p>
        </div>
        <div class="card-footer">
          <a href="../games/{{platform.slug}}" class="btn btn-dark d-grid gap-2 col-6 mx-auto"
            >See more!</a
          >
        </div>
      </div>
    </div>
    {% endfor %}
  </div>
</div>
{% endblock %}
